{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "TODO:addurltoTRIAschema",
  "title": "TRIA funding metadata schema",
  "description": "Schema for ...",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
       "org_name": {
        "type": "string",
        "minLength": 1,
        "title": "Research institution",
        "description": "Primary affiliation"
      },
      "rorid": {
        "type": ["string", "null"],
        "pattern": "^(|[0-9a-zA-Z]{9}$)",
        "title": "RORID",
        "description": "RORID, e.g. 04bs5yc70"
      },
      "org_country": {
        "type": "string",
        "pattern": "^[A-Z]{2}$",
        "title": "Country",
        "description": "Country code and name (ISO 3166-1 alpha-2)"
      },
      "grant_name": {
        "type": ["string", "null"],
        "title": "Grant name",
        "description": ""
      },
      "grant_nr": {
        "type": "string",
        "minLength": 1,
        "title": "Grant Nr.",
        "description": "Nr. or ID of the grant"
      }
    },
    "required": ["org_name", "org_country", "grant_nr"],
    "additionalProperties": false
  }
}
